extends layout_admin.pug
block scripts
	style
		include ../public/style/marks.css
	script
		include ../public/scripts/jquery-3.2.1.min.js
	script
		include ../public/scripts/js_marks.js
	script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js")

block content
			
	div(class="container")
		div(class="block")
			h2 Здесь Вы можете просмотреть и выставить итоговые оценки по предметам 
		
			div(class="row")
				div(class="col")
					select(name='group' id='group_change' class="form-control")
						option(disabled selected) Выберите группу
						- var c = groups
						each item in c
							option(value=item.id)=item.name
				div(class="col")
					select(name='dis' id='sem_change' class="form-control")
						option(disabled selected) Выберите семестр
				div(class="col")
					select(name='dis' id='dis_change' class="form-control")
						option(disabled selected) Выберите дисциплину

		
			div(id="table")
			button(type='button' id='submarks' class="btn button-ok btn-primary") Ок
			div(id="inform") Изменения сохранены
	div(id="createform")
		form
			div(class="form-group")
				label(for="date1") Дата
				input(type="date" class="form-control" id="date1")
				label(for="text1") Вид работы
				input(type="text" class="form-control" id="text1")
				div(id="subm" class="btn btn-primary button__add")  Ок
				div(id="cancel" class="btn btn-primary button__add")  Отмена
	div(id="changeform")
		form
			div(class="form-group")
				label(for="date2") Дата
				input(type="date" class="form-control" id="date2")
				label(for="text2") Вид работы
				input(type="text" class="form-control" id="text2")
				div(id="submchange" class="btn btn-primary button__add")  Ок
				div(id="cancelchange" class="btn btn-primary button__add")  Отмена
				div(id="delete" class="btn btn-primary button__add")  Удалить			
	div(id="edit")
			
