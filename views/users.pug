-resultQuery=data; 
head
	title Личный кабинет
	meta(charset="utf-8")
	meta(name="viewport" content="width=device-width, initial-scale=1")
	link(rel="shortcut icon" href="images/favicon.ico" type="image/x-icon")
	link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
	style
		include ../public/style/admin.css
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js")
	script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
	style
		include ../public/style/users.css
	script
		include ../public/scripts/users.js
body
	div(class="header")
		p Пользователь: #{user}
		a(href="/login" )
			button(type="button" class="btn btn-link" id="exit")  Выход
	div(class="container")
		div( id="menu")
			a(href="/profile" class="btn btn-primary" id="current") Главная
			a(href="/users")
				button(type="button" class="btn btn-primary")  Пользователи
			a(href="/directions")
				button(type="button" class="btn btn-primary")  Направления
			a(href="/groups")
				button(type="button" class="btn btn-primary")  Группы
			a(href="/up" class="btn btn-primary") Учебный план    
			a(href="/marks" class="btn btn-primary")  Оценки
			a(href="/msg" class="btn btn-primary")  Сообщения     
 
	table(class="table")
			thead
				tr
					th №
					th Имя
					th Фамилия
					th Отчество
					th Дата рождения
					th Username
					th Password
					th Статус
					th Направление
					th Год поступления
					th Группа
			tbody
				-for(var i=0;i<resultQuery.length;i++){
					tr(class="info")
						th=i+1
						th=resultQuery[i].name
						th=resultQuery[i].surname
						th=resultQuery[i].lastname
						th=resultQuery[i].birthday
						th=resultQuery[i].username
						th=resultQuery[i].password 
						th=resultQuery[i].role
						th=resultQuery[i].direction
						th=resultQuery[i].year
						th=resultQuery[i].groupname
				-}            